<div>
  <a href="<%= venue_path(venue) %>" target="_blank">
    <article class="flex flex-col rounded dark:shadow-slate-900/50 bg-white dark:bg-slate-700 dark:text-white gap-4 hover:scale-105 transition duration-500 ease-in-out">
      <img src="<%= venue.image %>" alt="<%= venue.name_en %>" loading="lazy" class="block object-contain">
      <div class="flex flex-col gap-1 px-4 mb-2">
        <header class="font-bold dark:text-white"><%= venue.name_en %></header>
        <div class="flex justify-between dark:text-white"><span class=""><%= venue.area_en %></span><span class=""><%= venue.min_bookable_minutes %> <%= I18n.t('minutes') %> / <%= venue.unit_price.round(0) %></span></div>
      </div>
    </article>
  </a>
</div>